<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/PosterImageView"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:contentDescription="@string/thumbnail"/>

            <TextView
                android:id="@+id/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PosterImageView"
                android:layout_centerHorizontal="true"
                tools:Text="Некоторый заголовок"
                android:textSize="16sp"/>

            <CheckBox
                android:id="@+id/LikeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TitleTextView"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:text="@string/LikeText" />

            <EditText android:id="@+id/CommentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LikeCheckBox"
                android:layout_margin="10dp"
                android:background="#EEEEEE"
                android:lines="3"
                android:hint="@string/Comment"
                android:padding="10dp"
                android:textAlignment="textStart" />

            <Button android:id="@+id/InviteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TitleTextView"
                android:layout_alignParentEnd="true"
                android:text="@string/Invite"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>